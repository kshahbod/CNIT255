package project;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.util.ArrayList;
import java.util.Random;

/**
 *
 * @author kaevan
 */
public class Appetizer {
    
    protected String soup;
    protected String salad;
    protected String pubFood;

    public String getSoup() {
        return soup;
    }

    public void setSoup(String soup) {
        this.soup = soup;
    }

    public String getSalad() {
        return salad;
    }

    public void setSalad(String salad) {
        this.salad = salad;
    }

    public String getPubFood() {
        return pubFood;
    }

    public void setPubFood(String pubFood) {
        this.pubFood = pubFood;
    }

    
    public void RandomDessertGenerator() throws Exception{
        File file0 = new File("/Users/kaevan/NetBeansProjects/Project/Appetizer.txt");
        BufferedReader br = new BufferedReader(new FileReader(file0));
        ArrayList<String> appetizerArray = new ArrayList<String>();
        ArrayList<String> appetizerPriceArray = new ArrayList<String>();
        String appetizerString;
        String appetizerPrice;
        Random rand = new Random();

        while ((appetizerString = br.readLine()) != null) {

            appetizerPrice = appetizerString.substring(appetizerString.length() - 4, appetizerString.length());
            appetizerString = appetizerString.substring(0, appetizerString.length() - 5);
            appetizerArray.add(appetizerString);
            appetizerPriceArray.add(appetizerPrice);
        }
        int random = rand.nextInt(appetizerArray.size());
        System.out.println(random);
        System.out.println(appetizerArray.get(random));
        System.out.println(appetizerPriceArray.get(random));
    }
}
