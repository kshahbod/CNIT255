public class Meal extends Guest{

    protected int price;
    protected boolean glutenFree;
    protected boolean vegan;
    protected boolean vegetarian;
    protected String allergyContents;

    public int getPrice(){
        return price;
    }

    public void setPrice(int price){
        this.price = price;
    }

    public boolean getGluten(){
        return glutenFree;
    }
    public void setGluten(boolean glutenFree){
        this.glutenFree = glutenFree;
    }
    public boolean getVegan(){
        return vegan;
    }

    public void setVegan(boolean vegan){
        this.vegan = vegan;
    }
    public boolean getVegetarian(){
        return vegetarian;
    }

    public void setVegetarian(boolean vegetarian){
        this.vegetarian = vegetarian;
    }
    public String allergyContents(){
        return allergyContents;
    }
    public void getAllergyContents(String allergyContents){
        this.allergyContents = allergyContents;
    }
    
}
